<!DOCTYPE html>
<html>
  <head>
    <title>BookManagementSystem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="Token" style="display: none" > </div>
  <div class="userID" style="display: none" > </div>
  <div class="userRole" style="display: none"> </div>

  <nav class="navbar navbar-inverse ">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Book System Logo</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
              <li><%= link_to 'Home Page', home_index_path %></li>

              <% if current_user.role == 'admin'%>
                  <li><%= link_to 'User List ', users_path , :method => :get %></li>
              <% end %>
              <li><%= link_to 'Book List ', books_path, :method => :get %></li>
              <li><a data-toggle='modal' data-target='#profile' class="showProfileUser" id="<%= current_user.id %>">Hello <%= current_user.name %></a></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, :method =>:delete %></li>
          <% else %>
              <li><%= link_to 'Register', register_path, :method => :get %></li>
              <li><%= link_to 'Login', new_user_session_path, :method => :get %></li>
          <%end %>


        </ul>
      </div>
    </div>
  </nav>

    <%= yield %>
    <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js' %>
  </body>
</html>
